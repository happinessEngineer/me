---
interface Props {
	title?: string;
}

const { title = "Justin Carboneau - Full Stack Engineer" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Justin Carboneau - Full Stack Engineer specializing in Growth & Marketing" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="font-['Inter',sans-serif]">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 37, 99, 235;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #4f46e5 30%, white 60%);
	}
	html {
		font-family: 'Inter', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		overflow-x: hidden;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
