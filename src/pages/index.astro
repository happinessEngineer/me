---
import Layout from '../layouts/Layout.astro';
import Experience from '../components/Experience';
---

<Layout title="Justin Carboneau - Full Stack Engineer">
	<main>
		<!-- Hero Section -->
		<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
			<!-- Background Image Container -->
			<div class="absolute inset-0 z-0">
				<img 
					src="/images/growth-bg.jpg" 
					alt="" 
					class="w-full h-full object-cover"
					aria-hidden="true"
				/>
				<div class="absolute inset-0 bg-gradient-to-r from-green-200/85 to-blue-200/85"></div>
			</div>
			
			<!-- Content -->
			<div class="relative z-10 text-center px-4 max-w-4xl mx-auto animate-fade-in">
				<h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-4 animate-slide-up">Justin Carboneau</h1>
				<p class="text-xl md:text-2xl text-gray-700 mb-8 animate-slide-up-delay">Full-Stack Engineer specializing in Growth & Marketing</p>
				<div class="flex flex-wrap justify-center gap-4 animate-fade-in-delay">
					<a 
						href="#experience" 
						class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-all hover:scale-105 shadow-lg"
					>
						View Experience
					</a>
				</div>
			</div>
		</section>

		<!-- Experience Timeline -->
		<Experience client:load />

		<!-- Skills Section -->
		<section class="py-16 bg-white">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl font-bold text-center mb-12">Skills</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<div class="p-6 rounded-lg shadow-lg bg-gradient-to-br from-green-50 to-blue-50 hover:from-green-100 hover:to-blue-100 transition-all duration-500 hover:scale-105 hover:shadow-xl animate-fade-in">
						<h3 class="text-xl font-bold mb-4 text-green-700">Front End</h3>
						<p class="text-gray-600">React.js, HTML5, CSS3, JavaScript, Redux, Next.js, Sass, Tailwind, Bootstrap</p>
					</div>
					<div class="p-6 rounded-lg shadow-lg bg-gradient-to-br from-green-50 to-blue-50 hover:from-green-100 hover:to-blue-100 transition-all duration-500 hover:scale-105 hover:shadow-xl animate-fade-in">
						<h3 class="text-xl font-bold mb-4 text-green-700">Back End</h3>
						<p class="text-gray-600">Node.js, TypeScript, Express, MySQL, PostgreSQL, AWS, Terraform, RESTful APIs, PHP, Python</p>
					</div>
					<div class="p-6 rounded-lg shadow-lg bg-gradient-to-br from-green-50 to-blue-50 hover:from-green-100 hover:to-blue-100 transition-all duration-500 hover:scale-105 hover:shadow-xl animate-fade-in">
						<h3 class="text-xl font-bold mb-4 text-green-700">SDLC</h3>
						<p class="text-gray-600">Agile, Git, GitHub Actions, CircleCI, NPM, Webpack, Vite, Jira, Confluence, Postman</p>
					</div>
					<div class="p-6 rounded-lg shadow-lg bg-gradient-to-br from-green-50 to-blue-50 hover:from-green-100 hover:to-blue-100 transition-all duration-500 hover:scale-105 hover:shadow-xl animate-fade-in">
						<h3 class="text-xl font-bold mb-4 text-green-700">Growth/Marketing</h3>
						<p class="text-gray-600">Analysis/Strategy, A/B Testing, Braze CEP, HubSpot CRM, Infusionsoft, Mixpanel, Tableau</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Projects Section -->
		<section class="py-16 bg-white">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl font-bold text-center mb-12">Side Projects</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<div class="group p-8 rounded-lg shadow-lg bg-gradient-to-br from-green-50 to-blue-50 hover:from-green-100 hover:to-blue-100 transition-all duration-500 hover:scale-105 hover:shadow-xl animate-fade-in">
						<h3 class="text-xl font-bold mb-2 text-green-700">The Daily Sein</h3>
						<p class="text-gray-600 mb-4">A trivia app based on the Seinfeld TV show</p>
						<a href="https://dailysein.com" class="inline-flex items-center text-green-600 hover:text-green-700 transition-colors group-hover:translate-x-2 duration-300">
							Visit Site 
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
								<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
							</svg>
						</a>
					</div>
					<div class="group p-8 rounded-lg shadow-lg bg-gradient-to-br from-green-50 to-blue-50 hover:from-green-100 hover:to-blue-100 transition-all duration-500 hover:scale-105 hover:shadow-xl animate-fade-in">
						<h3 class="text-xl font-bold mb-2 text-green-700">The Daily Friends</h3>
						<p class="text-gray-600 mb-4">A trivia app based on the Friends TV show</p>
						<a href="https://thedailyfriends.com" class="inline-flex items-center text-green-600 hover:text-green-700 transition-colors group-hover:translate-x-2 duration-300">
							Visit Site
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
								<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
							</svg>
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section id="contact" class="py-16 bg-gray-50">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-4xl font-bold mb-8">Let's Connect</h2>
				<p class="text-xl text-gray-600 mb-8">I'm always open to discussing new opportunities and interesting projects.</p>
				<a 
					href="mailto:carboneauj@gmail.com?subject=Inquiry%20from%20personal%20website" 
					class="bg-green-600 text-white px-8 py-4 rounded-lg hover:bg-green-700 transition-all hover:scale-105 shadow-lg inline-block"
				>
					Get in Touch
				</a>
			</div>
		</section>

		<footer class="py-8 bg-white">
			<div class="container mx-auto px-4 text-center">
				<p class="text-sm text-gray-500">
					Built on <a href="https://astro.build" class="text-green-600 hover:text-green-700 hover:underline">Astro</a> and <a href="https://tailwindcss.com" class="text-green-600 hover:text-green-700 hover:underline">Tailwind</a>, using <a href="https://www.codeium.com/windsurf" class="text-green-600 hover:text-green-700 hover:underline">Windsurf</a>.
				</p>
			</div>
		</footer>
	</main>
</Layout>

<style>
	section {
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}

	.animate-fade-in {
		animation: fadeIn 1s ease-out;
	}

	.animate-fade-in-delay {
		animation: fadeIn 1s ease-out 0.5s both;
	}

	.animate-slide-up {
		animation: slideUp 0.8s ease-out;
	}

	.animate-slide-up-delay {
		animation: slideUp 0.8s ease-out 0.3s both;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
